            {:else}
              <a href="/{params.lang}/{product}/" class="btn small">{@i18n}Learn more{/i18n}</a>
            {/date}
          </div>
        </div>

       {@math key=$idx method="mod" operand=3}
          {@eq value=2}
              </div>
      <div class="grid">
          {/eq}
        {/math}

      {/products-list.results}
      </div>
    </div>
  </div>
</div>