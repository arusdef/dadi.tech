{
  "page": {
    "key": "Platform",
    "color": "#1D0309"
  },
  "datasources": [
    "products",
    "solutions",
    "concepts",
    "latest-footer"
  ],
  "requiredDatasources": [
    "products"
  ],
  "routes": [
    {
      "path": "/:lang/platform/"
    },
    {
      "path": "/:lang/platform/:product",
      "fetch": "products"
    },
    {
      "path": "/:lang/platform/:section",
      "params": [
        {
          "param": "section",
          "in": ["security", "licensing", "roadmap", "concepts"]
        }
      ]
    },
    {
      "path": "/:lang/platform/:section/:concept",
      "params": [
        {
          "param": "concept",
          "fetch": "concepts"
        }
      ]
    }
  ]
} 